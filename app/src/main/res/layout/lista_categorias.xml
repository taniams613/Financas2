<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/categoria_nova"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="511dp"
        android:layout_toStartOf="@+id/caixa_categoria"
        android:layout_toLeftOf="@+id/caixa_categoria"
        android:text="@string/categoria" />

    <EditText
        android:id="@+id/caixa_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="513dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/add_nova_cat"
        android:layout_width="268dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginBottom="118dp"
        android:background="@drawable/botao"
        android:text="@string/add_nova_cat" />
</RelativeLayout>